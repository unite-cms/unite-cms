{# Renders an invitation registration form. This templated can be used and overriden for example for a general registration formular. #}
{% block form_header %}
    {{ form_errors(form) }}
    {{ form_start(form, {attr: {autocomplete: 'off'}}) }}
{% endblock %}


{% block form_body %}
    <fieldset class="uk-fieldset">
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
    </fieldset>
{% endblock %}


{% block form_body_end %}
    <hr />
{% endblock %}


{% block form_actions %}
    {{ form_row(form.submit) }}
{% endblock %}


{% block form_footer %}
    {{ form_rest(form) }}
{% endblock %}