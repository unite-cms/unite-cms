{% extends '@UniteCMSCore/layout.html.twig' %}
{% block navigation %}{% endblock %}
{% block title %}{{ site_name }}{% endblock title %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body centered-content-card uk-width-xlarge organizations-list">
    <header class="uk-card-header uk-flex">
        <a class="back-button" href="{{ url('unitecms_core_organization_index') }}">
            <i data-feather="arrow-left"></i>
        </a>
        <h2 class="uk-flex-1">{% trans with {'%organization%': organization|escape } %}organizations.delete.headline{% endtrans %}</h2>
    </header>

    {{ form_errors(form) }}

    <p class="uk-text-center">
        <i data-feather="trash-2" width="100" height="100" style="display: block; margin: 50px auto 30px;"></i>
        <br />
        {% trans with { '%organization%': organization|escape } %}organizations.delete.text{% endtrans %}
    </p>

    {{ form_start(form) }}
    <p class="uk-text-center">
        <a class="uk-button" style="background: white; margin: 10px;" href="{{ url('unitecms_core_organization_index') }}">{% trans %}organizations.delete.cancel{% endtrans %}</a>
        {{ form_widget(form.submit, {attr: {style: 'margin: 10px;'}}) }}
    </p>
    {{ form_end(form) }}
</article>
{% endblock content %}
