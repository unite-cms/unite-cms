{% extends '@UniteCMSCore/layout.html.twig' %}
{% block title %}{% trans with { '%user%' : member.user|escape } %}organization.user.update.title{% endtrans %}{% endblock title %}
{% block navigation %}{{ include('@UniteCMSCore/Organization/_navigation.html.twig') }}{% endblock navigation %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body full-content-card uk-flex-1">
    <header class="uk-card-header uk-flex">
        <a class="back-button" href="{{ url('unitecms_core_organizationuser_index', { organization: unite.organization.identifier|replace({'_':'-'}) }) }}">
            <i data-feather="arrow-left"></i>
        </a>
        <h2 class="uk-flex-1">{% trans with {'%user%': member.user|escape } %}organization.user.update.headline{% endtrans %}</h2>
    </header>
    {{ form_errors(form) }}
    {{ form_start(form) }}
    {{ form_rest(form) }}
</article>
{% endblock content %}
