{% extends '@UniteCMSCore/layout.html.twig' %}
{% block title %}{% trans with { '%invite%': invite|escape } %}organization.user.delete_invitation.title{% endtrans %}{% endblock title %}
{% block navigation %}{{ include('@UniteCMSCore/Organization/_navigation.html.twig') }}{% endblock navigation %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body full-content-card uk-flex-1">
    <header class="uk-card-header uk-flex">
        <a class="back-button" href="{{ url('unitecms_core_organizationuser_index', [unite.organization]) }}">
            <i data-feather="arrow-left"></i>
        </a>
        <h2 class="uk-flex-1">{% trans with { '%invite%': invite|escape } %}organization.user.delete_invitation.headline{% endtrans %}</h2>
    </header>

    {{ form_errors(form) }}

    <p class="uk-text-center">
        <i data-feather="trash-2" width="100" height="100" style="display: block; margin: 50px auto 30px;"></i>
        <br />
        {% trans with { '%invite%': invite|escape } %}organization.user.delete_invitation.text{% endtrans %}
    </p>

    {{ form_start(form) }}
    <p class="uk-text-center">
        <a class="uk-button" style="background: white; margin: 10px;" href="{{ url('unitecms_core_organizationuser_index', [unite.organization]) }}">{% trans %}organization.user.delete.cancel{% endtrans %}</a>
        {{ form_widget(form.submit, {attr: {style: 'margin: 10px;'}}) }}
    </p>
    {{ form_end(form) }}
</article>
{% endblock content %}
