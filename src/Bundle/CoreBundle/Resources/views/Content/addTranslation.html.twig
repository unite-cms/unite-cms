{% extends '@UniteCMSCore/layout.html.twig' %}
{% block title %}{% trans with { "%content%": content|escape, "%locale%": content.locale } %}content.translations.add_existing.title{% endtrans %}{% endblock title %}
{% block navigation %}{{ include('@UniteCMSCore/Domain/_navigation.html.twig') }}{% endblock navigation %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body full-content-card uk-flex-1">
    <header class="uk-card-header uk-flex">
        <a class="back-button" href="{{ url('unitecms_core_content_translations', {
            domain: domain.identifier,
            organization: organization.identifier,
            content_type: contentType.identifier,
            view: view.identifier,
            content: content.id
        }) }}"><i data-feather="arrow-left"></i></a>
        <h2 class="uk-flex-1">{% trans with { "%content%": content|escape, "%locale%": content.locale } %}content.translations.add_existing.headline{% endtrans %}</h2>
    </header>
    {{ form(form) }}
</article>
{% endblock content %}
