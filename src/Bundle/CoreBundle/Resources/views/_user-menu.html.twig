<div class="unite-user-menu">
    <button class="uk-button uk-button-text" type="button">
        {{ app.user }}
        <i data-feather="chevron-down"></i>
    </button>
    <div uk-dropdown="mode: click; pos: top-center">
        <ul class="uk-nav uk-dropdown-nav">
            <li class="uk-nav-header uk-hidden@m">{{ app.user }}</li>
            <li><a href="{{ url('unitecms_core_organization_index') }}">
                    <i class="uk-margin-small-right" data-feather="home"></i>
                    {% trans %}user_menu.organizations{% endtrans %}
                </a></li>
            <li><a href="{{ url('unitecms_core_profile_update') }}">
                <i class="uk-margin-small-right" data-feather="user"></i>
                    {% trans %}user_menu.edit_profile{% endtrans %}
            </a></li>
            <li><a class="uk-text-danger" href="{{ url('unitecms_core_logout') }}">
                <i class="uk-margin-small-right" data-feather="log-out"></i>
                {% trans %}user_menu.sign_out{% endtrans %}
            </a></li>

            <li class="uk-nav-divider"></li>
            <li class="uk-text-meta uk-text-center" style="font-size: 0.75rem; padding-top: 0.5rem;">unite cms {{ unite.version }}</li>
        </ul>
    </div>
</div>
